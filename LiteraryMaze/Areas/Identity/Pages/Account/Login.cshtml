@page
@model LoginModel

@{
    ViewData["Title"] = "Влезте в профила си";
}
<style>
    .log-in-page{
        display: flex;
        justify-content:space-evenly;
    }

    #accountLogIn{
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        flex: 1;
        margin-bottom: 3%;
    }

    #login-submit{
        display: inline-block;
        padding: 10px 15px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        background-color: #626161;
        border: 1px solid black;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease;
        width: 100%;
        box-sizing: border-box;
    }
    #bigLine{
        height: 4px;
        width: 20%;
        background-color: black;
        margin-left: 0;
    }

    #registerLink{
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        width: 100%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        flex: 1;
        margin-left: 5%;
        margin-right: 20%%;
    }

    #registerGrey{
        display: inline-block;
        padding: 10px 15px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        background-color: #626161;
        border: 1px solid black;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease;
        width:50%;
        box-sizing: border-box;

    }
</style>
<h1>@ViewData["Title"]</h1>
<hr id="bigLine" />
<br />
<div class="log-in-page">
    <div>
        <section>
            <form class="accountLogIn" method="post">
				<h3> Регистриран потребител</h3>
                <p>Ако имате профил, използвайте потребителското име и паролата си за да влезете.</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.UserName" class="form-label">Потребителско име</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div >
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div >
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration:none; color:darkgrey">Забравена парола?</a>
                    </p>

                </div>
            </form>
        </section>
    </div>
    <div>
        <section id="registerLink">
            <h3> Нови клиенти </h3>
            <p>
                Регистрацията Ви дава няколко предимства: по-бърза поръчка,
                <br />
                запазване на повече от един адрес, проследяване на поръчки и др.
            </p>
            <div>
               <a asp-page="/Account/Register" id="registerGrey" >Регистрирай се</a>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
