@model IEnumerable<LiteraryMaze.Data.Cart>

@{
	ViewData["Title"] = "Index";
}

<h1>Количка</h1>


<div class="catalog-container">
	@for (int i = 0; i < Model.Count(); i += 2)
	{
		<div class="catalog-row">
			@for (int j = i; j < i + 2 && j < Model.Count(); j++)
			{
				var item = Model.ElementAt(j);
				<div class="catalog-card">
					<div class="card-left">
						<div class="card-image">
							<img src="@item.Books.ImageURL" alt="Cover of @item.Books.Name" />
						</div>
						<div class="card-details">
							<p><strong>@item.Books.Name</strong></p>
							<p><b>Година на издаване:</b> @item.Books.Year</p>
							<p><b>Цена:</b> @item.Books.Price</p>
						</div>
					</div>
					<div class="card-divider">.........</div>
					<div class="card-actions">
						<a asp-action="Details" asp-route-id="@item.Id" class="catalog-btn">Детайли</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="catalog-btn">Премахни</a>
					</div>
				</div>
			}
		</div>
		<hr class="catalog-separator" />
	}
</div>

<div class="catalog-order">
	<a href="#" class="catalog-btn order-btn">Поръчай</a>
</div>




































<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Users)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Books)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FinalPrice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Quantity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DateRegister)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Users.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Books.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FinalPrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Quantity)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateRegister)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
