@model LiteraryMaze.Data.Promotion

@{
    ViewData["Title"] = "Създай Промоция";
}

<style>
    .promotion-create-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f7f9;
        margin: 0;
        padding: 0;
    }

    .promotion-create-title {
        text-align: center;
        margin-top: 30px;
        color: #333;
    }

    .promotion-form-wrapper {
        background: #ffffff;
        padding: 30px;
        margin: 30px auto;
        border-radius: 10px;
        max-width: 700px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .promotion-form-group {
        margin-bottom: 20px;
    }

    .promotion-label {
        display: block;
        font-weight: bold;
        color: #555;
        margin-bottom: 5px;
    }

    .promotion-input,
    .promotion-select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 15px;
    }

    .promotion-submit-btn {
        background-color: #e6ccff;
        color: #4b0082;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .promotion-submit-btn:hover {
            background-color: #d9b3ff;
        }

    .promotion-back-link {
        display: inline-block;
        margin-top: 20px;
        color: #4b0082;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease;
    }

        .promotion-back-link:hover {
            color: #6f42c1;
        }
</style>

<div class="promotion-create-container">
    <h1 class="promotion-create-title">Създай нова промоция</h1>

    <div class="promotion-form-wrapper">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="promotion-form-group">
                <label asp-for="BookId" class="promotion-label">Книга</label>
                <select asp-for="BookId" class="promotion-select" asp-items="ViewBag.BookId"></select>
            </div>

            <div class="promotion-form-group">
                <label asp-for="PromotionPercent" class="promotion-label">Процент отстъпка</label>
                <input asp-for="PromotionPercent" class="promotion-input" />
                <span asp-validation-for="PromotionPercent" class="text-danger"></span>
            </div>

            <div class="promotion-form-group">
                <label asp-for="StartDate" class="promotion-label">Начална дата</label>
                <input asp-for="StartDate" class="promotion-input" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="promotion-form-group">
                <label asp-for="EndDate" class="promotion-label">Крайна дата</label>
                <input asp-for="EndDate" class="promotion-input" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="promotion-form-group">
                <input type="submit" value="Създай" class="promotion-submit-btn" />
            </div>
        </form>

        <a asp-action="Index" class="promotion-back-link">Назад към списъка</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
