@model IEnumerable<LiteraryMaze.Data.Order>

@{
    ViewData["Title"] = "Поръчки";
}

<style>
    .order-index-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7f9;
        padding: 40px;
    }

    .order-index-title {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 30px;
        color: #333;
    }

    .create-order-btn {
        display: inline-block;
        background-color: #e6ccff;
        color: #4b0082;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        margin-bottom: 20px;
    }

        .create-order-btn:hover {
            background-color: #d9b3ff;
        }

    .order-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

        .order-table th, .order-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .order-table th {
            background-color: #f0f0f0;
            color: #555;
        }

        .order-table tr:hover {
            background-color: #f9f9f9;
        }

    .order-img {
        height: 70px;
        border-radius: 5px;
        object-fit: cover;
    }

    .order-actions a {
        color: #4b0082;
        text-decoration: none;
        margin-right: 8px;
        font-weight: 500;
    }

        .order-actions a:hover {
            text-decoration: underline;
        }
</style>

<br />
<div class="order-index-container">
    <h1 class="order-index-title">Списък с поръчки</h1>



    <table class="order-table">
        <thead>
            <tr>
                <th>Потребител</th>
                <th>Книга</th>
                <th>Количество</th>
             
                <th>Дата на поръчка</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Users.UserName)</td>
                    <td>
                        <img src="@item.Books.ImageURL" alt="Book Image" class="order-img" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
             
                    <td>@Html.DisplayFor(modelItem => item.DateRegister)</td>
                    <td class="order-actions">
                      
                        <a asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
