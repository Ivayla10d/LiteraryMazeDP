@model IEnumerable<LiteraryMaze.Data.Publisher>

@{
    ViewData["Title"] = "Издатели";
}

<style>
    .publisher-index-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7f9;
        padding: 40px;
    }

    .publisher-index-title {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 30px;
        color: #333;
    }

    .create-publisher-btn {
        display: inline-block;
        background-color: #e6ccff;
        color: #4b0082;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        margin-bottom: 20px;
    }

        .create-publisher-btn:hover {
            background-color: #d9b3ff;
        }

    .publisher-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

        .publisher-table th, .publisher-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .publisher-table th {
            background-color: #f0f0f0;
            color: #555;
        }

        .publisher-table tr:hover {
            background-color: #f9f9f9;
        }

    .publisher-img {
        width: 100px;
        height: auto;
        border-radius: 5px;
        object-fit: cover;
    }

    .publisher-actions a {
        color: #4b0082;
        text-decoration: none;
        margin-right: 8px;
        font-weight: 500;
    }

        .publisher-actions a:hover {
            text-decoration: underline;
        }
</style>
<br />
<div class="publisher-index-container">
    <h1 class="publisher-index-title">Списък с издатели</h1>

    <a asp-action="Create" class="create-publisher-btn">+ Създай нов издател</a>

    <table class="publisher-table">
        <thead>
            <tr>
                <th>Име</th>
                <th>Информация</th>
                <th>Лого</th>
                <th>Дата на регистрация</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Informacion)</td>
                    <td>
                        <img src="@item.ImageURL" alt="Publisher Image" class="publisher-img" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.DateRegister)</td>
                    <td class="publisher-actions">
                        <a asp-action="Edit" asp-route-id="@item.Id">Редактирай</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />